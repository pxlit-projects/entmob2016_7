<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitSense.Views.ActiveSetView"
             BindingContext="{Binding Source={StaticResource Locator}, Path=Connect}"
             xmlns:convertors="clr-namespace:FitSense.Converters">
  <NavigationPage.Resources>
    <ResourceDictionary>
      <convertors:MaxTimeConverter x:Key="maxTimeConverter" />
      <convertors:RepsConverter x:Key="repsConverter" />
      <convertors:PointsConverter x:Key="pointsConverter" />
    </ResourceDictionary>
  </NavigationPage.Resources>
  
  <ContentPage.Content>
    <StackLayout Spacing="10" x:Name="layout">
      <Label Text="{Binding TimeLeft, Converter={StaticResource maxTimeConverter}}" VerticalOptions="Start" HorizontalOptions="Center" />
      <Label Text="{Binding RepsLeft, Converter={StaticResource repsConverter}}" VerticalOptions="FillAndExpand" HorizontalOptions="Center" />
      <Button Text="Start Set" Command="{Binding StartSet}" VerticalOptions="FillAndExpand" HorizontalOptions="Center"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>